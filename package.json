{
  "name": "tslint-loader",
  "version": "3.5.3",
  "description": "tslint loader for webpack",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf -g './{,!(node_modules)/**/}*.js'",
    "tslint": "tslint -c ./tslint.json --project . --exclude test/fixtures/app/**/*.ts",
    "tsc": "tsc --pretty",
    "tsc:watch": "npm run tsc -- --watch",
    "mocha": "mocha test/loader.spec.js --timeout 10000",
    "lint": "npm run tslint",
    "prebuild": "npm run lint",
    "build": "npm run clean & npm run tsc",
    "pretest": "npm run build",
    "test": "npm run mocha",
    "watch": "npm run tsc:watch",
    "predeploy": "npm run build",
    "deploy": "np --skip-cleanup"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wbuchwalter/tslint-loader"
  },
  "keywords": [
    "tslint",
    "typescript",
    "webpack",
    "loader",
    "linting"
  ],
  "author": "William Buchwalter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wbuchwalter/tslint-loader/issues"
  },
  "homepage": "https://github.com/wbuchwalter/tslint-loader",
  "peerDependencies": {
    "tslint": ">=5",
    "webpack": ">=1"
  },
  "dependencies": {
    "es6-promisify": "^5",
    "loader-utils": "^1",
    "mkdirp": "^0",
    "lodash": "^4",
    "rimraf": "^2"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/es6-promisify": "^5",
    "@types/loader-utils": "^1",
    "@types/lodash": "^4",
    "@types/mkdirp": "^0",
    "@types/mocha": "^2",
    "@types/rimraf": "^2",
    "@types/node": "^8",
    "@types/webpack": "^3",
    "awesome-typescript-loader": "~3.2",
    "chai": "~4.1",
    "mocha": "~3.5",
    "np": "~2.16",
    "tslint": "~5.7",
    "tslint-microsoft-contrib": "~5.0",
    "typescript": "~2.5",
    "webpack": "~3.6"
  }
}
